<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#E3F4FF"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:paddingLeft="6dp"
                android:paddingTop="16dp"
                android:layout_gravity="center"
                android:paddingRight="5dp"
                android:paddingBottom="16dp"
                android:src="@drawable/user"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                    <TextView
                        android:id="@+id/nameSample"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/aclonica"
                        android:text="Drishya Nepal"
                        android:padding="3dp"
                        android:textColor="@color/teal_700"
                        android:textSize="20sp" />


                <TextView
                    android:id="@+id/locationSample"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lalitpur"
                    android:padding="3dp"
                    android:textColor="@color/purple_200"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/bloodGroupSample"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:gravity="center_vertical"
                    android:padding="3dp"
                    android:text="O+ve"
                    android:textColor="#D57871"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/initial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:gravity="center_vertical"
                        android:padding="3dp"
                        android:text="Distance: "
                        android:textColor="#034B78"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/distanceSample"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:gravity="center_vertical"
                        android:padding="3dp"
                        android:text="8.32"
                        android:textColor="@color/purple_200"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/a1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:baselineAligned="false"
                        android:gravity="center_vertical"
                        android:padding="3dp"
                        android:text="km"
                        android:textColor="@color/purple_200"
                        android:textSize="17sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>